{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          }
        },
        "import/parsers": {
          "@typescript-eslint/parser": [".ts"]
        }
    },
    "overrides": [
        {
          "files": ["test/**/*", "**/?(*.)+(spec|test).[jt]s?(x)"],
          "env": {
            "mocha": true
          },
          "rules": {
            "func-names": "off",
            "prefer-arrow-callback": "off"
          }
        }
    ],
    "rules": {
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "class-methods-use-this": "off",
        "import/first": "off",
        "import/prefer-default-export": "off",
        "no-underscore-dangle": "off",
        "func-names": "off",
        "prefer-arrow-callback": "off",
        "no-unused-vars": "off"
    }
}
